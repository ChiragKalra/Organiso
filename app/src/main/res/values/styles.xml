<resources>
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="tabTextColor">@color/text_secondary_dark</item>
        <item name="tabSelectedTextColor">@color/text_primary_dark</item>

        <item name="appBarLayoutStyle">@style/AppBarOverlay</item>
        <item name="actionModeStyle">@style/ActionMode</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionModeOverlay">true</item>
    </style>

    <style name="Splash" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="backgroundColor">@color/background_light</item>
        <item name="android:windowBackground">@drawable/bg_splash</item>
        <item name="colorPrimaryDark">@color/background_light</item>
        <item name="android:navigationBarColor">?backgroundColor</item>
    </style>

    <style name="AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textSize">18sp</item>
        <item name="background">?colorPrimary</item>
        <item name="android:textColor">@color/text_primary_dark</item>
        <item name="android:titleTextColor">@color/text_primary_dark</item>
        <item name="android:actionButtonStyle">@color/text_primary_dark</item>
    </style>

    <style name="ActionMode" parent="ThemeOverlay.MaterialComponents.Toolbar.Primary">
        <item name="background">@drawable/bg_appbarlayout</item>
        <item name="android:background">@color/popupMenuBackground</item>
        <item name="android:textColor">@color/text_primary_dark</item>
        <item name="popupMenuBackground">@color/popupMenuBackground</item>
        <item name="android:popupBackground">@color/popupMenuBackground</item>
        <item name="android:itemBackground">@color/popupMenuBackground</item>
    </style>

    <style name="Menu" parent="ThemeOverlay.MaterialComponents.Toolbar.Primary">
        <item name="colorSurface">@color/popupMenuBackground</item>
    </style>

    <!-- dark theme -->
    <style name="AppTheme.DarkTheme" parent="AppTheme">
        <item name="android:windowBackground">?backgroundColor</item>
        <item name="backgroundColor">@color/background_dark</item>
        <item name="android:textColor">@color/text_primary_dark</item>
        <item name="android:textColorPrimary">@color/text_primary_dark</item>
        <item name="unreadTextColor">@color/text_primary_dark</item>
        <item name="navActiveColor">@color/text_primary_dark</item>
        <item name="navInactiveColor">@color/text_hint_dark</item>
        <item name="android:textColorSecondary">@color/text_secondary_dark</item>
        <item name="android:textColorHint">@color/text_hint_dark</item>
        <item name="headerTextColor">@color/headerTextColorDark</item>
        <item name="contactItemBackground">@color/list_item_background_dark</item>
        <item name="multiChoiceSelectorColor">@color/selection_background_dark</item>
        <item name="bg_accent">@color/message_bg_accent_dark</item>
        <item name="android:alertDialogTheme">@style/DarkTheme.AlertDialog</item>
        <item name="android:navigationBarColor">?backgroundColor</item>
        <item name="editTextStyle">@style/DarkTheme.EditTextTheme</item>
    </style>

    <style name="DarkTheme" parent="AppTheme.DarkTheme"/>

    <style name="DarkTheme.AlertDialog" parent="@style/ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="colorPrimary">@color/headerTextColorDark</item>
        <item name="colorOnSurface">@color/text_primary_dark</item>
        <item name="android:background">@color/list_item_background_dark</item>
    </style>

    <style name="DarkTheme.EditTextTheme" parent="Widget.AppCompat.EditText">
        <item name="colorAccent">@color/headerTextColorDark</item>
        <item name="android:colorAccent">@color/headerTextColorDark</item>
        <item name="colorControlNormal">@color/text_secondary_dark</item>
        <item name="colorControlActivated">@color/headerTextColorDark</item>
        <item name="android:textColorHint">@color/text_hint_dark</item>
        <item name="android:textColorPrimary">@color/text_primary_dark</item>
    </style>

    <!-- light theme -->
    <style name="AppTheme.LightTheme" parent="AppTheme">
        <item name="android:windowBackground">?backgroundColor</item>

        <item name="backgroundColor">@color/background_light</item>
        <item name="android:textColorPrimary">@color/text_primary_light</item>
        <item name="headerTextColor">@color/headerTextColorLight</item>
        <item name="unreadTextColor">@color/text_primary_light</item>
        <item name="navActiveColor">@color/text_primary_light</item>
        <item name="navInactiveColor">@color/text_hint_light</item>
        <item name="android:textColor">@color/text_primary_light</item>
        <item name="android:textColorSecondary">@color/text_primary_light</item>
        <item name="android:textColorHint">@color/text_hint_light</item>
        <item name="contactItemBackground">@color/list_item_background_light</item>
        <item name="multiChoiceSelectorColor">@color/selection_background_light</item>
        <item name="bg_accent">@color/message_bg_accent_light</item>
       <item name="android:alertDialogTheme">@style/LightTheme.AlertDialog</item>
        <item name="android:navigationBarColor">?backgroundColor</item>
        <item name="editTextStyle">@style/LightTheme.EditTextTheme</item>
    </style>

    <style name="LightTheme" parent="AppTheme.LightTheme"/>

    <style name="LightTheme.AlertDialog" parent="@style/ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="colorPrimary">@color/headerTextColorLight</item>
        <item name="colorOnSurface">@color/text_primary_light</item>
        <item name="android:background">@color/list_item_background_light</item>
    </style>


    <style name="LightTheme.EditTextTheme" parent="Widget.AppCompat.EditText">
        <item name="colorAccent">@color/headerTextColorLight</item>
        <item name="android:colorAccent">@color/headerTextColorLight</item>
        <item name="colorControlNormal">@color/text_secondary_light</item>
        <item name="colorControlActivated">@color/headerTextColorLight</item>
        <item name="android:textColorHint">@color/text_hint_light</item>
        <item name="android:textColorPrimary">@color/text_primary_light</item>
    </style>

</resources>
