<resources>
    <!-- default theme -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="tabTextColor">@color/text_secondary_dark</item>
        <item name="tabSelectedTextColor">@color/text_primary_dark</item>
        <item name="android:itemBackground">@color/popupMenuBackground</item>

        <item name="tabTextAppearance">@style/TabText</item>
        <item name="appBarLayoutStyle">@style/AppBarOverlay</item>
        <item name="actionModeStyle">@style/ActionMode</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionModeOverlay">true</item>
    </style>

    <style name="Splash" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="backgroundColor">@color/background_light</item>
        <item name="android:windowBackground">@drawable/bg_splash</item>
        <item name="colorPrimaryDark">@color/background_light</item>
        <item name="android:navigationBarColor">?backgroundColor</item>
    </style>

    <style name="TabText" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_secondary_dark</item>
        <item name="android:textColorSecondary">@color/text_secondary_dark</item>
    </style>

    <style name="AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="background">?colorPrimary</item>
        <item name="android:textColor">@color/text_primary_dark</item>
        <item name="android:titleTextColor">@color/text_primary_dark</item>
        <item name="android:actionButtonStyle">@color/text_primary_dark</item>
    </style>

    <style name="ActionMode" parent="@style/Widget.AppCompat.ActionMode">
        <item name="background">?colorPrimary</item>
        <item name="actionModeBackground">?colorPrimary</item>
        <item name="android:background">@color/popupMenuBackground</item>
        <item name="android:textColor">@color/text_primary_dark</item>
        <item name="popupMenuBackground">@color/popupMenuBackground</item>
        <item name="android:popupBackground">@color/popupMenuBackground</item>
        <item name="android:itemBackground">@color/popupMenuBackground</item>
    </style>

    <!-- dark theme -->
    <style name="DarkTheme" parent="AppTheme">
        <item name="backgroundColor">@color/background_dark</item>
        <item name="android:textColor">@color/text_primary_dark</item>
        <item name="android:textColorPrimary">@color/text_primary_dark</item>
        <item name="android:textColorSecondary">@color/text_secondary_dark</item>
        <item name="android:textColorHint">@color/text_hint_dark</item>
        <item name="contactItemBackground">@color/list_item_background_dark</item>
        <item name="multiChoiceSelectorColor">@color/selection_background_dark</item>
        <item name="bg_accent">@color/message_bg_accent_dark</item>
        <item name="android:alertDialogTheme">@style/DarkTheme.AlertDialog</item>
        <item name="android:navigationBarColor">?backgroundColor</item>
        <item name="android:editTextStyle">@style/DarkTheme.EditTextTheme</item>
    </style>

    <style name="DarkTheme.AlertDialog" parent="Theme.AppCompat.DayNight.Dialog.Alert">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/text_primary_dark</item>
        <item name="android:background">@color/background_dark</item>
        <item name="android:textColorSecondary">@color/text_hint_dark</item>
        <item name="android:textColorAlertDialogListItem">@color/text_secondary_dark</item>
    </style>

    <style name="DarkTheme.EditTextTheme" parent="Theme.AppCompat.DayNight">
        <item name="colorControlNormal">@color/text_secondary_dark</item>
        <item name="colorControlActivated">@color/colorAccent</item>
        <item name="android:textColorHint">@color/text_hint_dark</item>
        <item name="android:textColorPrimary">@color/text_primary_dark</item>
    </style>

    <!-- light theme -->
    <style name="LightTheme" parent="AppTheme">
        <item name="backgroundColor">@color/background_light</item>
        <item name="android:textColorPrimary">@color/text_primary_light</item>
        <item name="android:textColor">@color/text_primary_light</item>
        <item name="android:textColorSecondary">@color/text_primary_light</item>
        <item name="android:textColorHint">@color/text_hint_light</item>
        <item name="contactItemBackground">@color/list_item_background_light</item>
        <item name="multiChoiceSelectorColor">@color/selection_background_light</item>
        <item name="bg_accent">@color/message_bg_accent_light</item>
       <item name="android:alertDialogTheme">@style/LightTheme.AlertDialog</item>
        <item name="android:navigationBarColor">?backgroundColor</item>
        <item name="android:editTextStyle">@style/LightTheme.EditTextTheme</item>
    </style>


    <style name="LightTheme.AlertDialog" parent="Theme.AppCompat.DayNight.Dialog.Alert">
        <item name="android:colorEdgeEffect">@color/text_primary_light</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/text_primary_light</item>
        <item name="android:background">@color/background_light</item>
        <item name="android:textColorSecondary">@color/text_hint_light</item>
        <item name="android:textColorAlertDialogListItem">@color/text_secondary_light</item>
    </style>

    <style name="LightTheme.EditTextTheme" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <item name="colorControlNormal">@color/text_secondary_light</item>
        <item name="colorControlActivated">@color/colorAccent</item>
        <item name="android:textColorHint">@color/text_hint_light</item>
        <item name="android:textColorPrimary">@color/text_primary_light</item>
    </style>

</resources>
