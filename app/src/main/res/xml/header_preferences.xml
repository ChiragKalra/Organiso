<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <Preference
        android:selectable="false"
        android:layout="@layout/view_app_badge"
        app:key="app_badge"/>

    <Preference
        app:allowDividerBelow="false"
        app:key="notifications"
        app:icon="@drawable/ic_notifications"
        app:title="Notifications" />

    <Preference
        app:fragment="com.bruhascended.sms.ui.settings.CategorySettingsFragment"
        app:icon="@drawable/ic_category"
        app:key="category_header"
        app:title="Customise Categories" />

    <Preference
        app:fragment="com.bruhascended.sms.ui.settings.InfoFragment"
        app:icon="@drawable/ic_info"
        app:key="info_header"
        app:title="Info" />

    <PreferenceCategory
        app:title="Theme"/>
    <SwitchPreferenceCompat
        app:allowDividerBelow="false"
        app:icon="@drawable/ic_theme"
        app:key="dark_theme"
        app:title="Dark Theme" />

</PreferenceScreen>