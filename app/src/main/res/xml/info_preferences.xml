<PreferenceScreen
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory
        app:title="Contact Us"/>
    <Preference
        app:icon="@drawable/ic_bug_report"
        app:key="report_bug"
        app:title="Report a bug" />

    <PreferenceCategory
        app:title="Privacy" />
    <SwitchPreferenceCompat
        app:defaultValue="true"
        app:icon="@drawable/ic_report"
        app:key="report_spam"
        app:title="Share anonymous spam reports" />

    <PreferenceCategory
        app:title="About App" />
    <Preference
        app:icon="@drawable/ic_web"
        app:key="website"
        app:title="Visit app website" />
    <Preference
        app:icon="@drawable/github"
        app:key="github"
        app:title="Check out the source code" />
    <Preference
        app:fragment="com.bruhascended.sms.SettingsActivity$LicenseFragment"
        app:icon="@drawable/ic_policy"
        app:key="License"
        app:title="License" />


</PreferenceScreen>