<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout android:descendantFocusability="blocksDescendants"
    tools:context=".ConversationActivity"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:clipToPadding="false"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:id="@+id/rootLayout"
    android:paddingTop="12dp"
    android:paddingEnd="8dp"
    android:paddingBottom="8dp"
    android:background="@drawable/bg_item_message"
    android:paddingStart="75dp"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:id="@+id/content"
        android:paddingEnd="18dp"
        android:paddingStart="12dp"
        android:paddingTop="4dp"
        android:paddingBottom="6dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_message_out"
        app:layout_constraintBottom_toTopOf="@id/status"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:visibility="gone"
                android:layout_width="0dp"
                android:layout_height="224dp"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true"
                android:layout_weight="1"
                android:id="@+id/image"
                android:contentDescription="@string/mms" />
            <ImageButton
                android:visibility="gone"
                android:id="@+id/playPause"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_margin="4dp"
                android:background="#0000"
                android:contentDescription="@string/send"
                android:src="@drawable/ic_play"
                android:tint="@color/colorAccent" />
            <SeekBar
                android:visibility="gone"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:id="@+id/slider"/>
            <VideoView
                android:visibility="gone"
                android:id="@+id/video"
                android:layout_width="0dp"
                android:layout_height="224dp"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true"
                android:layout_weight="1"
                android:contentDescription="@string/mms" />
        </LinearLayout>
        <TextView
            android:textIsSelectable="false"
            android:autoLink="all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/message"
            android:textColor="@color/white"
            android:textSize="18sp" />
    </LinearLayout>

    <ImageButton
        android:elevation="10dp"
        app:layout_constraintTop_toTopOf="@id/content"
        app:layout_constraintStart_toStartOf="@id/content"
        app:layout_constraintEnd_toEndOf="@id/content"
        app:layout_constraintBottom_toBottomOf="@id/content"
        android:visibility="gone"
        android:id="@+id/videoPlayPause"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_margin="4dp"
        android:background="#0000"
        android:contentDescription="@string/send"
        android:src="@drawable/ic_play"
        android:tint="@color/colorAccent" />

    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/content"
        android:layout_margin="8dp"
        android:textColor="@color/white"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@id/content"
        app:layout_constraintEnd_toStartOf="@+id/content"
        app:layout_constraintTop_toTopOf="@id/content" />


    <TextView
        android:id="@+id/status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:layout_marginEnd="16dp"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:textAllCaps="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/content"/>
</androidx.constraintlayout.widget.ConstraintLayout>